{
    "name": "hal/hal-core",
    "description": "Core domain entities and shared resources for Hal UI and Agent.",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/phpunit.xml.dist",
            "/tests"
        ]
    },
    "autoload": {
        "psr-4": { "Hal\\Core\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Hal\\Core\\Testing\\": "tests/src" }
    },

    "bin": [
        "bin/hal-random-id"
    ],

    "require": {
        "php-64bit": "~7.1",

        "ext-sodium":      "~2.0",
        "ext-pdo":         "*",
        "ext-pdo_mysql":   "*",
        "ext-pdo_pgsql":   "*",
        "ext-pdo_sqlite":  "*",
        "ext-zlib":        "*",

        "aws/aws-sdk-php": "^3.21.6",
        "doctrine/orm":    "~2.5.10",
        "ql/mcp-common":   "~1.1"
    },

    "require-dev": {
        "predis/predis":                "~1.0",
        "symfony/config":               "~3.3.0",
        "symfony/dependency-injection": "~3.3.0",
        "symfony/proxy-manager-bridge": "~3.3.0",
        "symfony/yaml":                 "~3.3.0",

        "nelmio/alice": "~2.3",
        "symfony/console": "~3.3.0",
        "symfony/dotenv": "~3.3.0",

        "overtrue/phplint":             "~1.0",
        "phpstan/phpstan":              "~0.9",
        "squizlabs/php_codesniffer":    "~3.0",

        "codedungeon/phpunit-result-printer": "~0.5",
        "mockery/mockery":                    "~1.0",
        "phpunit/phpunit":                    "~6.2"
    }
}
