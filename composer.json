{
    "name": "hal/hal-core",
    "description": "Core domain entities and shared resources for Hal UI and Agent.",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" }
    ],

    "autoload": {
        "psr-4": { "Hal\\Core\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Hal\\Core\\Testing\\": "tests/src" }
    },

    "bin": [
        "bin/hal-random-id",
        "bin/hal-phinx"
    ],

    "require": {
        "php-64bit": "~7.1",

        "ext-pdo":         "*",
        "ext-pdo_mysql":   "*",
        "ext-pdo_pgsql":   "*",
        "ext-pdo_sqlite":  "*",
        "ext-sodium":      "~2.0 || ~7.2",
        "ext-zlib":        "*",

        "aws/aws-sdk-php":  "~3.50",
        "doctrine/orm":     "~2.6",
        "psr/simple-cache": "~1.0",
        "ql/mcp-common":    "~2.0"
    },

    "require-dev": {
        "predis/predis":                "~1.0",
        "symfony/cache":                "~4.0",
        "symfony/config":               "~4.0",
        "symfony/dependency-injection": "~4.0",
        "symfony/options-resolver":     "~4.0",
        "symfony/proxy-manager-bridge": "~4.0",
        "symfony/yaml":                 "~4.0",

        "knplabs/github-api":       "~2.8",
        "php-http/guzzle6-adapter": "~1.1",
        "psr/http-message":         "~1.0",

        "overtrue/phplint":             "~1.0",
        "phpstan/phpstan":              "~0.9",
        "squizlabs/php_codesniffer":    "~3.0",

        "codedungeon/phpunit-result-printer": "~0.5",
        "mockery/mockery":                    "~1.0",
        "phpunit/phpunit":                    "~6.2"
    }
}
